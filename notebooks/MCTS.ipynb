    "#This is the game we'll be using to evaluate our MCTS method. This was completely generated by GPT4, I claim no authenticity. \n",
    "\n",
    "class TicTacToe:\n",
    "    def __init__(self):\n",
    "        self.board = [' '] * 9\n",
    "        self.current_player = 'X'\n",
    "\n",
    "    def possible_actions(self):\n",
    "        return [i for i, spot in enumerate(self.board) if spot == ' ']\n",
    "\n",
    "    def step(self, action):\n",
    "        new_board = self.board.copy()\n",
    "        new_board[action] = self.current_player\n",
    "        next_player = 'O' if self.current_player == 'X' else 'X'\n",
    "        new_state = TicTacToe()\n",
    "        new_state.board = new_board\n",
    "        new_state.current_player = next_player\n",
    "        return new_state\n",
    "\n",
    "    def is_terminal(self):\n",
    "        winning_positions = [(0, 1, 2), (3, 4, 5), (6, 7, 8),\n",
    "                             (0, 3, 6), (1, 4, 7), (2, 5, 8),\n",
    "                             (0, 4, 8), (2, 4, 6)]\n",
    "        for a, b, c in winning_positions:\n",
    "            if self.board[a] == self.board[b] == self.board[c] != ' ':\n",
    "                return True\n",
    "        if ' ' not in self.board:\n",
    "            return True\n",
    "        return False\n",
    "\n",
    "    def get_winner(self):\n",
    "        # 1 for 'X', 0 for 'O', 0.5 for draw\n",
    "        if not self.is_terminal():\n",
    "            return 0.5\n",
    "        if self.current_player == 'X':\n",
    "            return 0\n",
    "        return 1"
   ]
